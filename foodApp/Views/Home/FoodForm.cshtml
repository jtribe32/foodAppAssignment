@model Suggestion
<div class="text-center">
    <h1 class="display-4">Enter in your favorite  restaurants!</h1>
</div>
<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RestName">Restraunt Name</label>
        <input asp-for="RestName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FavDish">Favorite Dish</label>
        <input asp-for="FavDish" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Restraunt Phone Number</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

